include header.jade
body
  header
    #cover
      .container.banner-content
        h2 Welcome to my blog
    include nav.jade
  
  #blog-list.container
    .col-md-10.col-md-offset-1
      each blog, index in blogs
        .row.blog-each
          h2
            a(href="/blog/#{blog._id}")=blog.title
            small
              i=blog.time.day
          .blog-index-content
            .blog-img
              img(class="img-responsive" src="http://lingyong-me.qiniudn.com/QQ20141030-1@2x.png%202014-10-30%2011:21-px1366")
            .blog-content!=blog.content_begin
  
include footer.jade
        