style.
  .su-toolbar {
  width: 100%;
  height: 45px;
  display: block;
  background: #f5f5f5;
  padding: 5px;
  border: solid 1px;
  border-color: #cccccc;
  }
  .su-toolbar .tool-block {
  cursor: pointer;
  display: block;
  width: 35px;
  margin: 0 1%;
  height: 35px;
  float: left;
  padding: 5px;
  }
  .su-toolbar .tool-block * {
  left: 20%;
  top: 20%;
  }
  .su-toolbar .tool-block:hover {
  background: #00ffff;
  }
  .su-toolbar button {
  margin-top: 5px;
  }
  .suEditor {
  width: 50%;
  float: left;
  display: block;
  }
  .suEditor textarea {
  width: 100%;
  height: 400px;
  background: #f5f5f5;
  tab-size: 4;
  border: solid 1px;
  border-top: none;
  border-color: #cccccc;
  padding: 20px;
  resize: none;
  }
  .suEditor textarea:focus {
  background: #fff;
  border-color: #cccccc;
  outline: none;
  }
  .suPreview {
  width: 50%;
  left: 50%;
  float: left;
  background: #f5f5f5;
  height: 400px;
  display: block;
  overflow: auto;
  padding: 0 20px;
  border-right: solid 1px;
  border-bottom: solid 1px;
  border-color: #cccccc;
  }
  .suProgress {
  width: 100%;
  }
.suProgress.progress
  .progress-bar.su-progress-bar(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100")
    | 0%
.su-toolbar
  .tool-block.su-tool-bold(title="加粗(Ctrl+B)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-bold
  .tool-block.su-tool-italic(title="斜体(Ctrl+I)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-italic
  .tool-block.su-tool-head(title="标题(Ctrl+H)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-header
  .tool-block.su-tool-link(title="链接(Ctrl+L)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-link
  .tool-block.su-tool-img(title="图片(Ctrl+G)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-picture
  .tool-block.su-tool-list(title="无序列表(Ctrl+U)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-list
  .tool-block.su-tool-orderlist(title="有序列表(Ctrl+O)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-th-list
  .tool-block.su-tool-code(title="单行代码(Ctrl+K)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-asterisk
  .tool-block.su-tool-quote(title="引用(Ctrl+Q)", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-comment
  .tool-block.su-tool-plus(title="文件上传", data-placement="top", data-toggle="tooltip", style="display: block;")
    span.glyphicon.glyphicon-upload
  input.su-tool-upload(type="file", style="display: none", multiple="")
  a.tool-block.su-tool-help(href="http://lab.lepture.com/editor/markdown", title="帮助", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-info-sign
  .tool-block.pull-right.su-tool-fullscreen(title="全屏", data-placement="top", data-toggle="tooltip")
    span.glyphicon.glyphicon-fullscreen
  .tool-block.pull-right.su-tool-preview(title="预览", data-placement="top", data-toggle="tooltip", style="display: none;")
    span.glyphicon.glyphicon-eye-open

.suEditor
  textarea(id='content_editor' required="required" name='content')= blog.content
.suPreview
